{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "event_type": {
      "type": "string",
      "enum": [
        "created",
        "replaced",
        "deleted"
      ]
    },
    "customer_uuid": {
      "type": "string",
      "format": "uuid"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 255
        },
        "birthdate": {
          "type": "string",
          "format": "date"
        },
        "state": {
          "type": "string",
          "enum": [
            "active",
            "locked",
            "disabled"
          ]
        }
      },
      "required": [
        "name",
        "birthdate",
        "state"
      ]
    }
  },
  "required": [
    "event_type",
    "customer_uuid"
  ]
}
